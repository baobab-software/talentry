{
  "name": "@talentry/validation",
  "version": "0.0.1",
  "description": "Shared validation schemas and types for Talentry applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas/*": {
      "import": "./dist/schemas/*.mjs",
      "require": "./dist/schemas/*.js",
      "types": "./dist/schemas/*.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.mjs",
      "require": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "keywords": [
    "validation",
    "schema",
    "zod",
    "typescript",
    "talentry"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamkabelomoobi/talentry",
    "directory": "packages/validation"
  }
}
